<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/selection_navigation">
    <navigation
        android:id="@+id/selection_navigation"
        app:startDestination="@id/selection_fragment">
        <fragment
            android:id="@+id/selection_fragment"
            android:name="com.sysu.edu.academic.CourseSelectionFragment"
            android:label="@string/course_selection">
            <action
                android:id="@+id/selection_to_filter1"
                app:destination="@id/filter1_fragment" />
        </fragment>
        <fragment
            android:id="@+id/filter1_fragment"
            android:name="com.sysu.edu.academic.CourseQueryFragment"
            android:label="@string/filter" />
    </navigation>
    <navigation
        android:id="@+id/preview_navigation"
        app:startDestination="@id/preview_fragment">
        <fragment
            android:id="@+id/preview_fragment"
            android:name="com.sysu.edu.academic.CourseSelectionPreviewFragment"
            android:label="@string/preview">
            <action
                android:id="@+id/preview_to_filter2"
                app:destination="@id/filter2_fragment" />
        </fragment>
        <fragment
            android:id="@+id/filter2_fragment"
            android:name="com.sysu.edu.academic.CourseQueryFragment"
            android:label="@string/filter" />
    </navigation>
</navigation>