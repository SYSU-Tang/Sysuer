<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/training_nav"
    app:startDestination="@+id/schedule">
    <fragment
        android:id="@+id/schedule"
        android:name="com.sysu.edu.academic.TrainingScheduleFragment"
        tools:layout="@layout/fragment_training_schedule">
        <action
            android:id="@+id/confirmationAction"
            app:destination="@id/result" />
    </fragment>
    <fragment
        android:id="@+id/result"
        android:name="com.sysu.edu.academic.TrainingResultFragment"
        tools:layout="@layout/fragment_training_result"/>
</navigation>