<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="我的">
        <Preference
            app:icon="@drawable/account"
            app:title="个人中心">
            <intent android:targetClass="com.sysu.edu.extra.Privacy"
                android:targetPackage="com.sysu.edu"/>
        </Preference>
        <Preference
            app:isPreferenceVisible="false"
            app:title="数据"/>
    </PreferenceCategory>
    <PreferenceCategory app:title="软件">
        <Preference
            app:icon="@drawable/setting"
            android:persistent="false"
            app:key="setting"
            app:title="设置" >

        </Preference>
        <Preference
            app:icon="@drawable/info"
            app:title="关于">
            <intent android:action="android.intent.action.VIEW"
                android:targetClass="com.sysu.edu.extra.InfoActivity"
                android:targetPackage="com.sysu.edu">
            </intent>

        </Preference>
        <Preference
            app:icon="@drawable/help"
            app:title="帮助"/>
    </PreferenceCategory>
</PreferenceScreen>