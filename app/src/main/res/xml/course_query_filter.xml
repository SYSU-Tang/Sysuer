<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/time">
        <rikka.preference.SimpleMenuPreference
            app:icon="@drawable/calendar"
            app:key="yearSemester"
            app:persistent="false"
            app:title="@string/year_semester"
            app:useSimpleSummaryProvider="true" />
        <rikka.preference.SimpleMenuPreference
            app:key="endYear"
            app:persistent="false"
            app:title="结束学年"
            app:useSimpleSummaryProvider="true" />
        <com.sysu.edu.preference.SliderPreference
            android:max="7"
            app:icon="@drawable/course"
            app:key="week"
            app:min="0"
            app:persistent="false"
            app:seekBarIncrement="1"
            app:showSeekBarValue="true"
            app:title="@string/week"
            app:useSimpleSummaryProvider="true" />
        <com.sysu.edu.preference.RangeSliderPreference
            android:max="26"
            app:key="weekRange"
            app:min="0"
            app:persistent="false"
            app:seekBarIncrement="1"
            app:showSeekBarValue="true"
            app:title="周次"
            app:useSimpleSummaryProvider="true" />
        <com.sysu.edu.preference.RangeSliderPreference
            android:max="12"
            app:key="classRange"
            app:min="0"
            app:persistent="false"
            app:seekBarIncrement="1"
            app:showSeekBarValue="true"
            app:title="节次"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/location">
        <rikka.preference.SimpleMenuPreference
            app:icon="@drawable/location"
            app:key="campus"
            app:persistent="false"
            app:title="@string/campus"
            app:useSimpleSummaryProvider="true" />
        <rikka.preference.SimpleMenuPreference
            app:icon="@drawable/location"
            app:isFilter="true"
            app:key="teachingBuilding"
            app:persistent="false"
            app:title="@string/office"
            app:useSimpleSummaryProvider="true" />
        <com.sysu.edu.preference.FilterPreference
            app:allowDividerAbove="false"
            app:icon="@drawable/home"
            app:key="classroom"
            app:persistent="false"
            app:title="@string/classroom"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory app:title="课程">
        <com.sysu.edu.preference.EditPreference
            app:icon="@drawable/calendar"
            app:key="courseName"
            app:persistent="false"
            app:title="@string/course_name"
            app:useSimpleSummaryProvider="true" />
        <com.sysu.edu.preference.EditPreference
            app:icon="@drawable/calendar"
            app:key="courseNumber"
            app:persistent="false"
            app:title="@string/course_number"
            app:useSimpleSummaryProvider="true" />
        <rikka.preference.SimpleMenuPreference
            app:icon="@drawable/calendar"
            app:key="courseType"
            app:persistent="false"
            app:title="@string/course_type"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory app:title="教学班">
        <com.sysu.edu.preference.EditPreference
            app:icon="@drawable/language"
            app:key="className"
            app:persistent="false"
            app:title="教学班名称"
            app:useSimpleSummaryProvider="true" />
        <rikka.preference.SimpleMenuPreference
            app:icon="@drawable/menu"
            app:isFilter="false"
            app:key="classLevel"
            app:persistent="false"
            app:title="教学班层次"
            app:useSimpleSummaryProvider="true" />
        <com.sysu.edu.preference.EditPreference
            app:icon="@drawable/id"
            app:key="classId"
            app:persistent="false"
            app:title="教学班编号"
            app:useSimpleSummaryProvider="true" />
        <com.sysu.edu.preference.EditPreference
            app:icon="@drawable/account"
            app:key="teacher"
            app:persistent="false"
            app:title="主讲教师"
            app:useSimpleSummaryProvider="true" />
        <com.sysu.edu.preference.FilterPreference
            app:canEdit="true"
            app:icon="@drawable/group"
            app:isFilter="false"
            app:key="department"
            app:persistent="false"
            app:title="开课单位"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>