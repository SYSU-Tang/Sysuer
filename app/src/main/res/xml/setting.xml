<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="外观">
        <DropDownPreference
            app:entries="@array/theme"
            app:entryValues="@array/theme"
            app:icon="@drawable/theme"
            app:summary="跟随系统"
            app:title="主题"/>
        <DropDownPreference
            app:entries="@array/language"
            app:entryValues="@array/language"
            app:icon="@drawable/language"
            app:summary="跟随系统"
            app:title="语言"/>
        <DropDownPreference
            app:entries="@array/home"
            app:entryValues="@array/home"
            app:icon="@drawable/home"
            app:summary="活动"
            app:title="首页"/>
    </PreferenceCategory>
    <PreferenceCategory app:title="软件">
        <Preference
            app:icon="@drawable/info"
            app:title="关于">
            <intent android:action="android.intent.action.VIEW"
                android:targetClass="com.sysu.edu.extra.InfoActivity"
                android:targetPackage="com.sysu.edu">
            </intent>
        </Preference>
        <Preference
            app:icon="@drawable/help"
            app:title="帮助"/>
    </PreferenceCategory>
</PreferenceScreen>